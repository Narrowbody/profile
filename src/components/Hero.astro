---
interface Props {
	title: string;
	tagline?: string;
	sub?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, sub, title } = Astro.props;
---

<div class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		<h1 class="title">{title}</h1>
		{tagline && <p class="tagline">{tagline}</p>}
		{sub && <p class="sub">{sub}</p>}
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title{
		max-width: 37ch;
		margin-inline: auto;

	}

	.tagline {
		max-width: 100ch; 
		margin-inline: auto;
	}

	.sub {
		text-align: left;
		font-size: var(--text-lg);
		max-width: 37ch;

	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}
	}
</style>
