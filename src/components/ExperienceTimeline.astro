/* Timeline Section
------------------------------------------------------------*/
.tl-timeline ul {
    
    padding: 50px 0;
    overflow: inherit; 
    background-color: var(--gray-999_40);
	box-shadow: var(--shadow-md);
}

.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);
		content: '';
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background:
			url('/assets/backgrounds/noise.png') top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

.tl-timeline ul li {
    list-style-type: none;
    position: relative;
    width: 6px;
    margin: 0 auto;
    padding-top: 50px;
    background: #fff;
}

.tl-timeline ul li::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: inherit;
    z-index: 1;
}

.tl-timeline ul li div {
    position: relative;
    bottom: 0;
    width: 300px;
    padding: 15px;
    background: var(--gray-500);
    border-radius: 10px;
}

.tl-timeline ul li div::before {
    content: "";
    position: absolute;
    bottom: 7px;
    width: 0;
    height: 0;
    border-style: solid;
}

.tl-timeline ul li:nth-child(odd) div {
    left: 45px;
}

.tl-timeline ul li:nth-child(odd) div::before {
    left: -15px;
    border-width: 8px 16px 8px 0;
    border-color: transparent var(--gray-500) transparent transparent;
}

.tl-timeline ul li:nth-child(even) div {
    left: -337px;
}

.tl-timeline ul li:nth-child(even) div::before {
    right: -15px;
    border-width: 8px 0 8px 16px;
    border-color: transparent transparent transparent var(--gray-500);
}

time {
    display: block;
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 8px;
}

/*Effects
-----------------------------------------------------------------*/
.tl-timeline ul li::after {
    transition: background 1.5s ease-in-out;
}

.tl-timeline ul li.in-view::after {
    background: var(--gray-800);
}

.tl-timeline ul li div {
    visibility: hidden;
    opacity: 0;
    transition:  all 2.5s ease-in-out;
}

.tl-timeline ul li:nth-child(odd) div {
    transform: translate3d(200px, 0, 0);
}

.tl-timeline ul li:nth-child(even) div {
    transform: translate3d(-200px, 0, 0);
}

.tl-timeline ul li.in-view div {
    transform: none;
    visibility: visible;
    opacity: 1;
}

/* General Media Queries */
@media screen and (max-width: 900px) {
    .tl-timeline ul li div {
        width: 250px;
    }
    .tl-timeline ul li:nth-child(even) div {
        left: -289px;
        /*250+45-6*/
    }
}

@media screen and (max-width: 600px) {
    .tl-timeline ul li {
        margin-left: 20px;
    }

    .tl-timeline ul li div {
        width: calc(100vw - 91px);
    }

    .tl-timeline ul li:nth-child(even) div {
        left: 45px;
    }
    
    .tl-timeline ul li:nth-child(even) div::before {
        left: -15px;
        border-width: 8px 16px 8px 0;
        border-color:  transparent #f45b69 transparent transparent;
    }
}

/*Extra/Clip Path Styles*/
.tl-timeline-clippy ul li::after {
    width: 40px;
    height: 40px;
    border-radius: 0;
}

.tl-timeline-rhombus ul li::after {
    clip-path:  polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
}

.tl-timeline-rhombus ul li div::before {
    bottom: 12px;
}

.tl-timeline-star ul li::after {
    clip-path: polygon(
        50% 0%,
        61% 35%,
        98% 35%,
        68% 57%,
        79% 91%,
        50% 70%,
        21% 91%,
        32% 57%,
        2% 35%,
        39% 35%
    );
}

.tl-timeline-heptagon ul li::after {
    clip-path: polygon(
        50% 0%,
        90% 20%,
        100% 60%,
        75% 100%,
        25% 100,
        0% 60%,
        10% 20%
    );
}

.tl-timeline-infinite ul li::after {
    animation: scaleAnimation 2s infinite;
}

@keyframes scaleAnimation {
    0% {
        transform: translateX(-50%) scale(1);
    }
    50% {
        transform: translateX(-50%) scale(1.25);
    }
    100% {
        transform: translateX(-50%) scale(1);
    }
}

	.hidden {
		opacity: 0;
		transition: all 10s;
	}

	.show {
		opacity: 1;
	}

