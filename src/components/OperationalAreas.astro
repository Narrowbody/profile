---
//import Icon from './Icon.astro';
import { Icon } from 'astro-icon';
---


<div class="ops">
			<h2>Operational areas I can serve in;</h2>
<section class="container">
	
			<div class="card">
				<div class="image">
					<img src="/assets/airlines.jpeg" alt="airlines"/>
				</div>
				<div class="heading">
					<Icon name="airplane-clock" color="var(--accent-regular)" width = "32" class="icon"/>
					<h3 class="title"> Airlines</h3>
				</div>
				<div class="description">
							<ul>
									<li><p>Scheduled Carriers</p></li>
									<li><p>Cargo Carriers</p></li>
						</ul>
			</div>
			</div>

			<div class="card">
				<div class="image">
					<img src="/assets/helicopter-ops.jpeg" alt="helicopter operations" />
				</div>
				<div class="heading">
					<Icon name="helicopter" color="var(--accent-regular)" width = "32" class="icon"/>
					<h2 class="title">Helicopter Ops.</h2>
				</div>
				<div class="description">
							<ul>
									<li><p>Emergency Medical Services</p></li>
									<li><p>Search and Rescue</p></li>
									<li><p>Fire Fighting</p></li>
						</ul>
			</div>
			</div>

			<div class="card">
				<div class="image"><img src="/assets/airlines.jpeg" alt="airlines" /></div>
				<div class="heading">
					<Icon name="scheduled-maintenance" color="var(--accent-regular)" width = "32" class="icon"/>
					<h2 class="title">MRO's</h2>
				</div>
				<div class="description">
							<ul>
									<li><p>CAMO/Part M</p></li>
									<li><p>Part 145</p></li>
									<li><p>Part 21G</p></li>
									<li><p>Part 21J</p></li>
						</ul>
			</div>
			</div>

			<div class="card">
				<div class="image"><img src="/assets/airlines.jpeg" alt="airlines" width="100%" /></div>
				<div class="heading">
					<Icon name="truck-plane" color="var(--accent-regular)" width = "32" class="icon"/>
					<h2 class="title">Ground Services</h2>
				</div>
				<div class="description">
							<ul>
									<li><p>Ground Operations</p></li>
									<li><p>Ground Handling</p></li>
									<li><p>Ground Support Equipment</p></li>
									<li><p>Dangerous Goods Handling</p></li>
						</ul>
			</div>
			</div>

			<div class="card">
				<div class="image"><img src="/assets/airlines.jpeg" alt="airlines" width="100%" /></div>
				<div class="heading">
					<Icon name="airport" color="var(--accent-regular)" width = "32" class="icon"/>
					<h2 class="title">Aerodromes</h2>
				</div>
				<div class="description">
							<ul>
									<li><p>Domestic airports</p></li>
									<li><p>International airports</p></li>
						</ul>
			</div>
			</div>

			<div class="card">
				<div class="image"><img src="/assets/airlines.jpeg" alt="airlines" width="100%" /></div>
				<div class="heading">
					<Icon name="i-training-class" color="var(--accent-regular)" width = "32" class="icon"/>
					<h2 class="title">Training Organizations</h2>
				</div>
				<div class="description">
							<ul>
									<li><p>ATO's</p></li>
									<li><p>Part 147 organizations</p></li>
									<li><p>Part 142 organizations</p></li>
						</ul>
			</div>
			</div>

			<div class="card">
				<div class="image"><img src="/assets/airlines.jpeg" alt="airlines" width="100%" /></div>
				<div class="heading">
					<Icon name="car-autonomous" color="var(--accent-regular)" width = "32" class="icon"/>
					<h2 class="title">Autonomous Vehicles</h2>
				</div>
				<div class="description">
							<ul>
									<li><p>Conditional Automation</p></li>
									<li><p>High Automation</p></li>
									<li><p>Full Automation</p></li>
						</ul>
			</div>
			</div>

			<div class="card">
				<div class="image"><img src="/assets/airlines.jpeg" alt="airlines" width="100%" /></div>
				<div class="heading">
					<Icon name="fighter-jet" color="var(--accent-regular)" width = "32" class="icon"/>
					<h2 class="title">Military Aviation</h2>
				</div>
				<div class="description">
							<ul>
									<li><p>Army</p></li>
									<li><p>Navy</p></li>
									<li><p>Air Force</p></li>
						</ul>
			</div>
			</div>

			<div class="card">
				<div class="image"><img src="/assets/airlines.jpeg" alt="airlines" width="100%" /></div>
				<div class="heading">
					<Icon name="airline-digital-gate" color="var(--accent-regular)" width = "32" class="icon"/>
					<h2 class="title">Charter Operations</h2>
				</div>
				<div class="description">
							<ul>
									<li><p>Scheduled</p></li>
									<li><p>Unscheduled</p></li>
						</ul>
			</div>
			</div>
</section>
</div>


<style>
	.ops {
		display: grid;
  justify-content: space-evenly;
		align-content: center;
		padding: 3rem;
		
	}

	.title {
		font-size: var(--text-xl);
		
	}

	.container {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-items: center;
		gap: 3rem;
		padding-top: 3rem;
		
	}
	h3 {
		font-size: var(--text-xl);
	}

	p {
		color: var(--gray-400);
	}

	.card {
		width: 300px;
		min-height: 300px;
		flex-direction: column;
		border: 1px solid var(--gray-800);
		border-radius: 10px;
		border-top-right-radius: 0;
		border-top-left-radius: 0;
		padding: 0;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-md);
		
	}

	.image {
		
  
		object-fit: cover;
		background-color: blueviolet;
	}

	.heading {
		display: flex;
		padding: .5rem;
		
	}

	.heading .title {
		margin-left: .5rem;
		
	}

	[astro-icon]{
		color: var(--accent-regular);
		
	}

	.description {
		padding: 0;
		position: relative;

	}

 .description ul {
		color: var(--gray-500);
		padding-left: 1.5rem;
		padding-bottom: 1rem;
	}

	.box {
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-md);
	}





	@media (min-width: 50em) {
		.box {
			border-radius: 1.5rem;
			padding: 2.5rem;
		}

		.skills {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 5rem;
		}

		.skills h2 {
			font-size: var(--text-xl);
		}
	}
</style>
